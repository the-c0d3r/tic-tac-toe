BoxLayout:
    id: mainWindow
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.3
        orientation: 'vertical'
        Label:
            id: result_label
            text: ''
        
        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: btn_playagain
                text: "Play Again"
                on_press: app.pressed_playagain()
            Button:
                id: btn_exit
                text: "Exit"
                on_press: app.pressed_exit()

    BoxLayout:
        orientation: 'vertical'
        
        GridLayout:
            id: btn_box
            cols: 3
            rows: 3


        Label:
            size_hint_y: 0.1
            id: status_label
            text: ''

